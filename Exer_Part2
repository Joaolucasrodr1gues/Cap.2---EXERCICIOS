4.
distancia = float(input("Digite a distância da viagem em Km: "))#entrada

#logica if-else para o preco da passgem
if distancia <= 200:
    preco = distancia * 0.50
else:
    preco = distancia * 0.45

#saida
print("O preço da passagem é: R$", preco)

5.
numero = int(input("Digite um número entre 1000 e 9999: "))#entrada

#separando em milhar,centena, dezena e unidade
milhar = numero // 1000
centena = (numero % 1000) // 100
dezena = (numero % 100) // 10
unidade = numero % 10

#saidas
print("Milhar:", milhar)
print("Centena:", centena)
print("Dezena:", dezena)
print("Unidade:", unidade)

6.
import math #biblioteca

num = float(input("Digite um número decimal: "))#entrada

#equacoes
print("Raiz quadrada:", math.sqrt(num))#raiz quadrada
print("Função teto:", math.ceil(num))#arredonda para cima
print("Função chão:", math.floor(num))#arredonda para baixo
print("Parte inteira:", int(num))#parte interira do numero
